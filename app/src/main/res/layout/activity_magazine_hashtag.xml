            android:clickable="true" />

        <TextView
            android:id="@+id/hashTag4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/hash4"
            android:gravity="center"
            android:onClick="hashTagOnClick"
            android:clickable="true" />

        <TextView
            android:id="@+id/hashTag5"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/hash5"
            android:gravity="center"
            android:onClick="hashTagOnClick"
            android:clickable="true" />

        <TextView
            android:id="@+id/hashTag6"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/hash6"
            android:gravity="center"
            android:onClick="hashTagOnClick"
            android:clickable="true" />

        <TextView
            android:id="@+id/hashTag7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/hash7"
            android:gravity="center"
            android:onClick="hashTagOnClick"
            android:clickable="true" />

    </LinearLayout>
</HorizontalScrollView>
